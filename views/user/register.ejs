<!DOCTYPE html>
<html>
<head>
<title>Register</title>
<style>
    body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .login-container {
            width: 350px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group input {
            width: 95%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group label {
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }

        .btn-container {
            margin-top: 20px;
        }

        .btn {
            padding: 10px 30px;
            background-color:black;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-secondary {
            background-color:black;
            padding-top: 10px;
            position: relative;
            top: 10px;
        }
</style>
</head>
<body>
<div class="login-container">
  <h2>Register</h2>
  <form action="/register" method="post" onsubmit="return validateForm()">
    
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div class="form-group">
        <label for="mobileNo">Mobile Number:</label>
        <input type="text" id="mobileNo" name="mobile" required pattern="[0-9]{10}" title="Enter a valid 10-digit mobile number">
    </div>
        
    <div class="btn-container">
      <button type="submit" class="btn" id="login">Register</button>
    </div>
  </form>
       <!--error messages-->
       <% if (typeof message !="undefined" ) {%>

        <p class="mt-3 text-info ">
            <%= message %>
        </p>

        <%} %>
            <!--end messages-->
  <div id="error-messages"></div>
</div>


<script>
function validateForm() {
  // Clear any previous error messages
  const errorMessages = document.getElementById("error-messages");
  errorMessages.innerHTML = "";

  // Validate each field
  const name = document.getElementById("name").value;
  const email = document.getElementById("email").value;
  const password = document.getElementById("password").value;
  const mobileNo = document.getElementById("mobileNo").value;

  let isValid = true;

  if (name.trim() === "") {
    addErrorMessage("Please enter your name.");
    isValid = false;
  }

  // Improved email validation using a regular expression
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailRegex.test(email)) {
    addErrorMessage("Please enter a valid email address.");
    isValid = false;
  }

  if (password.length < 8) {
    addErrorMessage("Password must be at least 8 characters long.");
    isValid = false;
  }

  if (!mobileNo.match(/^[0-9]{10}$/)) {
    addErrorMessage("Please enter a valid 10-digit mobile number.");
    isValid = false;
  }

  return isValid;
}

function addErrorMessage(message) {
  const errorMessages = document.getElementById("error-messages");
  const p = document.createElement("p");
  p.classList.add("error-message"); 
  p.textContent = message;
  errorMessages.appendChild(p);
}

</script>
</body>
</html>


