                                  data-offername="<%= offers[i].offerName %>"
                                  data-description="<%= offers[i].description %>"
                                  data-discount="<%= offers[i].discount %>"
                                  data-startingdate="<%= new Date(offers[i].startingDate).toISOString().split('T')[0] %>"
                                  data-endingdate="<%= new Date(offers[i].endingDate).toISOString().split('T')[0] %>">
                                  Edit
