  <script>
        document.addEventListener('DOMContentLoaded', function () {
    // Submit form data
    document.getElementById('addOfferForm').addEventListener('submit', function (e) {
      e.preventDefault();
      
      // Collect form data
      var formData = {
        offerName: document.getElementById('offerName').value,
        description: document.getElementById('description').value,
        discount: document.getElementById('discount').value,
        startingDate: document.getElementById('startingDate').value,
        endingDate: document.getElementById('endingDate').value
      };

      // Send data to server using AJAX
      $.ajax({
        type: 'POST',
        url: '/admin/addOffer', // Replace with your server-side endpoint
        data: formData,
        success: function (response) {
          console.log('Offer added successfully:', response);
          // Close the modal after successful submission
          $('#addOfferModal').modal('hide');
        },
        error: function (error) {
          console.error('Error adding offer:', error);
          // Handle error, if needed
        }
      });
    });
  });

</script>

// edit offer modal
<script>
$(document).on('click', '.edit-offer', function () {
    const offerId = $(this).data('offerid');
    const offerName = $(this).data('offername');
    const description = $(this).data('description');
    const discount = $(this).data('discount');
    const startingDate = $(this).data('startingdate');
    const endingDate = $(this).data('endingdate');

    // Populate the fields in the edit modal
    $('#editOfferModal #offerId').val(offerId);
    $('#editOfferModal #offerName').val(offerName);
    $('#editOfferModal #description').val(description);
    $('#editOfferModal #discount').val(discount);
    $('#editOfferModal #startingDate').val(startingDate);
    $('#editOfferModal #endingDate').val(endingDate);

    // Show the modal
    $('#editOfferModal').modal('show');
});
//edit offer modal end

  </script>
  
